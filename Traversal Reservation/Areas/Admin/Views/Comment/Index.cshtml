@model List<Comment>

<h1>Yorum Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı</th>
        <th>Tur</th>
        <th>Tarih</th>
        <th>Sil</th>

    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.CommentID</td>
            <td>@item.User</td>
            <td>@item.Destination.City</td>
            <td>@((DateTime)item.Date).ToString("dd-MMM-yyyy")</td>
            <td><a href="/Admin/Comment/DeleteComment" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>





