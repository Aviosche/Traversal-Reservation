@model MailRequest

<h1>Mail Gönderme</h1>

<form method="post">

    <div class="form-group">
        <label>Alıcı Mail Adresi</label>
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        <label>Konu Başlığı</label>
        <input type="text" asp-for="Subject" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        <label>İçerik</label>
        <textarea cols="30" rows="5" class="form-control" asp-for="Body"></textarea>
    </div>
    <br />

    <button class="btn btn-outline-primary">Gönder</button>
</form>

