@model List<CustomerViewModel>


<h1>API Müşteri Listesi</h1>
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Ülke</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.CustomerID</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Mail</td>
            <td><a href="/Admin/CustomerAPI/DeleteCustomer/@item.CustomerID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/CustomerAPI/UpdateCustomer/@item.CustomerID" class="btn btn-outline-success">Güncelle</a></td>

        </tr>
    }

</table>

<a href="/Admin/CustomerAPI/AddCustomer" class="btn btn-outline-primary">Yeni Müşteri Girişi</a>

