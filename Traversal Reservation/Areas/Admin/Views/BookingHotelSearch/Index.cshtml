@model IEnumerable<BookingHotelSearchViewModel.Result>

@{
    int counter = 0;
}

<h1>Booking Otel Rezervasyon</h1>
<br />
<h3>Arama Yapılan Şehir: Berlin / Almanya</h3>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Otel Adı</th>
        <th>Otel Puanı</th>
        <th>Otel Değerlendirmesi</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(++counter)</td>
            <td>@item.name</td>
            <td>@item.reviewScore</td>
            <td>@item.reviewScoreWord</td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>

        </tr>
    }



</table>


